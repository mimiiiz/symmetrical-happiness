<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.hammerpaperscissors.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_username"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_qmark"
        android:src="@drawable/mark"
        android:layout_below="@+id/tv_bot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bot"
        android:id="@+id/tv_bot"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_scr"
        android:layout_above="@+id/tv_username"
        android:layout_marginBottom="83dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/scr"
        android:onClick="check" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_rock"
        android:layout_above="@+id/tv_username"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/bt_scr"
        android:layout_marginBottom="83dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/rock"
        android:onClick="check" />



    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/bt_paper"
        android:src="@drawable/paper"
        android:layout_alignTop="@+id/bt_scr"
        android:layout_toRightOf="@id/bt_scr"
        android:onClick="check" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIN"
        android:id="@+id/tv_win"
        android:layout_alignTop="@+id/tv_scoreWin"
        android:layout_alignLeft="@+id/tv_username"
        android:layout_alignStart="@+id/bt_scr" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_scoreWin"
        android:layout_below="@+id/bt_paper"
        android:layout_toRightOf="@id/tv_win"
        android:paddingLeft="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRAW"
        android:id="@+id/tv_draw"
        android:layout_alignTop="@+id/tv_scoreDraw"
        android:layout_alignLeft="@+id/tv_username"
        android:layout_alignStart="@+id/bt_scr"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_scoreDraw"
        android:paddingTop="10dp"
        android:layout_below="@+id/tv_scoreWin"
        android:layout_toRightOf="@id/tv_win"
        android:paddingLeft="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOSE"
        android:id="@+id/tv_lose"
        android:layout_alignTop="@+id/tv_scoreLose"
        android:layout_alignLeft="@+id/tv_username"
        android:layout_alignStart="@+id/bt_scr"
        android:paddingTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/tv_scoreLose"
        android:paddingTop="10dp"
        android:layout_below="@+id/tv_scoreDraw"
        android:layout_toRightOf="@id/tv_win"
        android:paddingLeft="67dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/bt_reset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="reset"/>


</RelativeLayout>
